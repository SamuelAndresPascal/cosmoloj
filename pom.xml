    <groupId>com.cosmoloj</groupId>
    <artifactId>cosmoloj</artifactId>
    <version>1.0-SNAPSHOT</version>
    <packaging>pom</packaging>
    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <slf4j.version>1.7.32</slf4j.version>
        <logback.version>1.2.6</logback.version>
        <junit.jupiter.version>5.8.0</junit.jupiter.version>
        <checkstyle.plugin.version>3.1.2</checkstyle.plugin.version>
        <checkstyle.location>checkstyle.xml</checkstyle.location>
        <checkstyle.version>9.0</checkstyle.version>
        <compiler.plugin.version>3.8.1</compiler.plugin.version>
        <surefire.plugin.version>3.0.0-M4</surefire.plugin.version>
        <sonar.plugin.version>3.9.0.2155</sonar.plugin.version>
        <javadoc.plugin.version>3.3.0</javadoc.plugin.version>
        <javadoc.plugin.failOnError>false</javadoc.plugin.failOnError>
        <site.plugin.version>3.9.1</site.plugin.version>
        <deploy.plugin.version>3.0.0-M1</deploy.plugin.version>
        <project.info.reports.plugin.version>3.1.2</project.info.reports.plugin.version>
        <wagon.ssh.version>3.4.3</wagon.ssh.version>
        <deploy.server.ip>${env.PUBLIC_DEPLOY_SERVER}</deploy.server.ip>
        <site.server.ip>${env.PUBLIC_SITE_SERVER}</site.server.ip>
        <deploy.server.path>${env.PUBLIC_DEPLOY_SERVER_PATH}</deploy.server.path>
        <site.server.path>${env.SITE_SERVER_PATH}</site.server.path>

        <jacoco.plugin.version>0.8.7</jacoco.plugin.version>
        <sonar.java.coveragePlugin>jacoco</sonar.java.coveragePlugin>
        <sonar.dynamicAnalysis>reuseReports</sonar.dynamicAnalysis>
        <sonar.jacoco.reportPath>${project.basedir}/../target/jacoco.exec</sonar.jacoco.reportPath>
        <sonar.language>java</sonar.language>
    </properties>

    <distributionManagement>
        <repository>
            <id>deploy-public</id>
            <url>scp://${deploy.server.ip}${deploy.server.path}</url>
        </repository>
        <site>
            <id>site-public</id>
            <url>scp://${site.server.ip}${site.server.path}</url>
        </site>
    </distributionManagement>

